{
	"php.format.enable": true,
	"php.validate.enable": true,
	"php.suggest.basic": false,
	"editor.formatOnSave": true,
	"editor.formatOnType": true,
	"editor.insertSpaces": false,
	"editor.tabSize": 4,
	"editor.detectIndentation": false,
	"editor.rulers": [120],
	"editor.trimAutoWhitespace": true,
	"files.trimTrailingWhitespace": true,
	"files.insertFinalNewline": true,
	"files.trimFinalNewlines": true,
	"phpcs.enable": true,
	"phpcs.standard": "${workspaceFolder}/phpcs.xml",
	"phpcs.executablePath": "phpcs",
	"phpcs.showSources": true,
	"phpcs.showWarnings": true,
	"phpcs.ignorePatterns": [
		"**/externals/**",
		"**/designs/**",
		"**/adminer-*",
		"**/editor-*",
		"**/vendor/**"
	],
	"php-cs-fixer.enable": true,
	"php-cs-fixer.executablePath": "php-cs-fixer",
	"php-cs-fixer.config": "${workspaceFolder}/.php_cs",
	"php-cs-fixer.allowRisky": false,
	"php-cs-fixer.onsave": true,
	"intelephense.format.enable": true,
	"intelephense.format.braces": "k&r",
	"intelephense.diagnostics.enable": true,
	"intelephense.diagnostics.run": "onSave",
	"intelephense.diagnostics.embeddedLanguages": false,
	"intelephense.diagnostics.undefinedTypes": false,
	"intelephense.diagnostics.typeErrors": false,
	"intelephense.completion.maxItems": 100,
	"intelephense.completion.insertUseDeclaration": true,
	"intelephense.completion.fullyQualifyGlobalConstantsAndFunctions": false,
	"intelephense.files.maxSize": 1000000,
	"intelephense.files.associations": [
		"*.php",
		"*.inc"
	],
	"intelephense.files.exclude": [
		"**/externals/**",
		"**/designs/**",
		"**/adminer-*",
		"**/editor-*",
		"**/vendor/**",
		"**/node_modules/**",
		"**/.git/**",
		"**/.svn/**"
	],
	"intelephense.stubs": [
		"apache",
		"bcmath",
		"bz2",
		"calendar",
		"com_dotnet",
		"Core",
		"ctype",
		"curl",
		"date",
		"dba",
		"dom",
		"enchant",
		"exif",
		"FFI",
		"fileinfo",
		"filter",
		"fpm",
		"ftp",
		"gd",
		"gettext",
		"gmp",
		"hash",
		"iconv",
		"imap",
		"intl",
		"json",
		"ldap",
		"libxml",
		"mbstring",
		"meta",
		"mysqli",
		"oci8",
		"odbc",
		"openssl",
		"pcntl",
		"pcre",
		"PDO",
		"pdo_ibm",
		"pdo_mysql",
		"pdo_pgsql",
		"pdo_sqlite",
		"pgsql",
		"Phar",
		"posix",
		"pspell",
		"readline",
		"Reflection",
		"session",
		"shmop",
		"SimpleXML",
		"snmp",
		"soap",
		"sockets",
		"sodium",
		"SPL",
		"sqlite3",
		"standard",
		"superglobals",
		"sysvmsg",
		"sysvsem",
		"sysvshm",
		"tidy",
		"tokenizer",
		"xml",
		"xmlreader",
		"xmlwriter",
		"xsl",
		"Zend OPcache",
		"zip",
		"zlib",
		"apcu"
	],
	"phpstan.enabled": true,
	"phpstan.configPath": "${workspaceFolder}/phpstan.neon",
	"phpstan.level": "6",
	"phpstan.showErrorsOnSave": true,
	"phpstan.memoryLimit": "1G",
	"phpstan.timeout": 60,
	"phpstan.checkPaths": [
		"plugins/drivers/bigquery.php",
		"plugins/drivers/bigquery/**",
		"devtools/web/index.php"
	],
	"files.associations": {
		"*.php": "php",
		"*.inc": "php",
		"*.phtml": "php",
		"phpcs.xml": "xml",
		"phpstan.neon": "yaml",
		".php_cs": "php",
		".php_cs.dist": "php"
	},
	"emmet.includeLanguages": {
		"php": "html"
	},
	"[php]": {
		"editor.defaultFormatter": "bmewburn.vscode-intelephense-client",
		"editor.insertSpaces": false,
		"editor.tabSize": 4,
		"editor.detectIndentation": false,
		"editor.formatOnSave": true,
		"editor.formatOnPaste": true,
		"editor.formatOnType": true,
		"editor.wordWrap": "wordWrapColumn",
		"editor.wordWrapColumn": 120,
		"editor.rulers": [120],
		"files.trimTrailingWhitespace": true,
		"files.insertFinalNewline": true
	},
	"[json]": {
		"editor.insertSpaces": true,
		"editor.tabSize": 2
	},
	"[yaml]": {
		"editor.insertSpaces": true,
		"editor.tabSize": 2
	},
	"[xml]": {
		"editor.insertSpaces": false,
		"editor.tabSize": 4
	},
	"php.version": "8.4"
}
